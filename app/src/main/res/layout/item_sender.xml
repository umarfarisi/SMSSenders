<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/margin_standard"
    app:contentPadding="@dimen/margin_standard">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/margin_standard"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/senderNameTextView"
            android:text="Muhammad Umar Farisi"/>
        <TextView
            android:layout_below="@+id/senderNameTextView"
            android:layout_margin="@dimen/margin_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/senderNumberTextView"
            android:text="085777799054"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/senderNumberOfSendingTextView"
            android:text="500"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>